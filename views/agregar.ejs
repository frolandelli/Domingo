<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link rel="stylesheet" href="style.css">
    <script src="https://kit.fontawesome.com/1ad6ac593c.js" crossorigin="anonymous"></script>

</head>

<body>
    <!-- Button trigger modal -->
    <!-- <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
  </button> -->

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>




    <header>
     

    </header>
    <main>
        <div class="row">


            <div class="col-8 bg-light" id="formulario">
                <form id="fileForm" enctype="multipart/form-data">

                    <div class="mb-3 w-75 p-4">
                        <div id="error"> </div>
                        <label for="dni" class="form-label">DNI</label>
                        <input type="text" class="form-control campo" id="dni" name="dni">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control campo" id="nombre" name="nombre">
                        <label for="apellido" class="form-label  ">Apellido</label>
                        <input type="text" class="form-control campo" id="apellido" name="apellido">



                        <label for="especialidad" class="form-label">Especialidad</label>
                        <select class="form-select campo" id="especialidad" name="especialidad">
                            <option value="" hidden>Elija una opci√≥n</option>
                            <% for(let i=0;i<especialidades.length; i++) { %>
                                <option value="<%= especialidades[i].Especialidad %>">
                                    <%= especialidades[i].Especialidad %>
                                </option>
                                <% } %>
                        </select>

                        <div class="row">
                            <div class="col-6">
                                <label for="file" class="form-label">Foto </label> <br>
                                <input type="file" name="file" id="image" class="form-control campo"
                                    accept=".jpg, .jpeg, .png" required> <br>
                            </div>
                            <div class="col-6">
                                <img id="previewImage" src="" alt="Vista previa" class="mt-3"
                                    style="display:none; width: 200px; height: 200px;">
                            </div>
                            <!-- <input type="submit" class="btn btn-info m-3" value="Cargar" >
                        <input type="reset" class="btn btn-outline-primary m-3 " value="Borrar" > -->
                        </div>

                        <label for="activo" class="form-label">Activo</label>
                        <input type="checkbox" id="activo" checked name="activo"> <br>
                        <button class="btn btn-primary my-3" id="cargar">Cargar</button>
                        <button class="btn btn-primary my-3" id="limpiar">Limpiar</button>
                        <a href="\tabla"> <input type="button" class="btn btn-outline-secondary m-3 " id="volver"
                                value="Volver"> </a>
                    </div>
                    <!-- Este div levanta los mensajes de error por ya existencia del usuario, etc -->
                </form>
            </div>

        </div>



    </main>
    <footer>
        <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
    <script src="appAgregar.js"></script>
    <!-- No hace falta poner todo el camino porque ya esta configurdo en  app.use(express.static("public/JS"));  -->

</body>

</html>